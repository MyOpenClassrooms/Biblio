<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="utilisateur.nom">
		<field-validator type="requiredstring">
			<message key="nom.obligatoire"/>
		</field-validator>
		
	</field>
	
	<field name="utilisateur.prenom">
		<field-validator type="requiredstring">
			<message key="prenom.obligatoire"/>
		</field-validator>
	</field>
	
		<field name="utilisateur.adress">
		<field-validator type="requiredstring">
			<message key="adress.obligatoire"/>
		</field-validator>
	</field>
	
	<field name="utilisateur.email">
		<field-validator type="email">
		<message key="email.invalide"/>
		</field-validator>
		
		<field-validator type="requiredstring">
			<message key="email.obligatoire"/>
		</field-validator>
	</field>
	
	<field name="utilisateur.password">
    <field-validator type="stringlength">
        <param name="minLength">6</param>
        <param name="maxLength">12</param>
        <message key="password.invalide"/>
    </field-validator>
    
    <field-validator type="requiredstring">
			<message key="password.obligatoire"/>
		</field-validator>
</field>
</validators>